---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

const galeryImages = await Astro.glob("../assets/images/galerie/*.jpg");
---

<Layout title="Hundemomente.info - Hundebegegnungen">
  <main>
    <div class="container px-6 py-10 mx-auto">
      <h1 class="text-2xl font-semibold text-center text-gray-800 lg:text-3xl">
        Beispiele für die <span class="text-blue-500"
          >Arbeit mit den Hunden</span
        >
      </h1>

      <div class="mt-8 grid gap-4 grid-cols-1 lg:grid-cols-2 xl:grid-cols-3">
        {
          galeryImages.map(im => (
            <Image src={im.default} width="485" alt="Beispiel für die Arbeit mit den Hunden"></Image>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
