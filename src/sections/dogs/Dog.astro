---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

export interface Props {
  name: string;
  image: ImageMetadata;
  memorial?: boolean;
}

const { name, image, memorial = false } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-2 relative">
  {
    memorial && (
      <div class="absolute top-2 left-2 bg-gradient-to-r from-amber-100 to-amber-50 border-2 border-amber-300 px-4 py-2 rounded-lg shadow-md z-10">
        <span class="text-amber-800 font-semibold text-sm">
          ‚≠ê In liebevoller Erinnerung
        </span>
      </div>
    )
  }

  <Image
    width="400"
    alt="Hund {name}"
    src={image}
    class={`object-cover border-2 ${memorial ? "opacity-60 border-amber-300" : ""}`}
  />

  <div class="mx-8 my-8 sm:my-0">
    <h2 class="text-2xl">{name}</h2>

    <slot />
  </div>
</div>
